<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mycinema.myapplicationcinema">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.StartingActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SeancesActivity"
            android:label="Séances"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.EventsActivity"
            android:label="Evènements"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.SoonActivity"
            android:label="Prochainement"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.PreferencesActivity"
            android:label="Préférences"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.MovieActivity"/>
    </application>

</manifest>
